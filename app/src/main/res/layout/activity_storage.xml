<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StorageActivity"
    tools:layout_editor_absoluteY="25dp">


        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="100dp"
            android:layout_height="226dp"
            android:layout_marginEnd="42dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="83dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/bg" />

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_marginBottom="13dp"
            android:layout_marginEnd="38dp"
            android:layout_marginStart="38dp"
            android:layout_marginTop="32dp"
            android:textSize="28sp"
            app:layout_constraintBottom_toTopOf="@+id/imgFoto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/camera"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginBottom="28dp"
            android:layout_marginEnd="76dp"
            android:layout_marginStart="43dp"
            android:layout_marginTop="27dp"
            android:onClick="takePhotoAndSave"
            app:layout_constraintBottom_toBottomOf="@+id/textView7"
            app:layout_constraintEnd_toStartOf="@+id/verFoto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgFoto"
            app:srcCompat="@drawable/cam" />

        <ImageView
            android:id="@+id/verFoto"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="42dp"

            app:layout_constraintBottom_toBottomOf="@+id/camera"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/camera"
            app:layout_constraintTop_toTopOf="@+id/camera"
            app:srcCompat="@drawable/gallery" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="11dp"
            android:text="CÃ¢mera"
            app:layout_constraintStart_toStartOf="@+id/camera"
            app:layout_constraintTop_toBottomOf="@+id/camera" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="33dp"
            android:layout_marginStart="18dp"
            android:text="Ver Foto"
            app:layout_constraintBottom_toTopOf="@+id/btnEnviar"
            app:layout_constraintStart_toStartOf="@+id/verFoto" />

        <Button
            android:id="@+id/btnEnviar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="56dp"
            android:text="stream"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView7" />

        <Button
            android:id="@+id/btnEnviar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="50dp"
            android:text="bytes"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


</android.support.constraint.ConstraintLayout>